<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<div class="table__box container p-6">
  <div>
    <div>
      <span class="cont_text">Content</span>
      <%# <th>User</th>
      <th colspan="3"></th> %>
    </div>
  </div>

  <div class="flex">
    <% @microposts.each do |micropost| %>
        <div class="my-4"><%= micropost.content %></div>
        <div class="links-but">
          <button class="btn btn-primary"><%= link_to 'Show', micropost %></button>
          <button class="btn btn-success"><%= link_to 'Edit', edit_micropost_path(micropost) %></button>
          <button class="btn btn-danger"><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></button>
        </div>
    <% end %>
  </div>
</div>


